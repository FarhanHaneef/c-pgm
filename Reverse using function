#include <stdio.h>
int rev(int n)
{
  int rem,rev=0;
  while(n!=0)
  {
    rem=n%10;
    rev=rev*10+rem;
    n=n/10;
  }
  printf("\nReversed number is : %d",rev);
}
void main()
 {
   int n;
   printf("Enter the number : ");
   scanf("%d",&n);
   printf("\nThe original number is : %d",n);
   rev(n);
 
